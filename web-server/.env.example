# Конфигурация веб-сервера
PORT=3000
NODE_ENV=production

# Безопасность
API_SECRET=your-secret-key-here-change-this
SESSION_SECRET=another-secret-key-change-this

# Telegram бот интеграция
BOT_WEBHOOK_URL=http://localhost:8080/webhook
BOT_API_SECRET=bot-secret-key

# База данных (если используется)
DATABASE_URL=postgresql://user:password@localhost/verification_db
# или для SQLite
# DATABASE_URL=sqlite:./data/verification.db

# Настройки ограничений
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Логирование
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# Домены (для CORS)
ALLOWED_ORIGINS=https://your-domain.com,http://localhost:3000

# Геолокация
GEOIP_UPDATE=true
