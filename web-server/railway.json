{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install",
    "nixpacksVersion": "1.15.0"
  },
  "deploy": {
    "startCommand": "npm start",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "service": {
    "name": "verification-web-server",
    "type": "web",
    "env": {
      "PORT": "3000",
      "NODE_ENV": "production"
    },
    "healthcheck": {
      "path": "/",
      "timeout": 10,
      "interval": 30,
      "maxRetries": 3
    },
    "ports": [
      {
        "port": 3000,
        "protocol": "http"
      }
    ]
  }
}
